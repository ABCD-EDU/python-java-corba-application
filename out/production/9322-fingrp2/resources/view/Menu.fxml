<AnchorPane prefHeight="540.0" prefWidth="580.0" style="-fx-background-color: #F2F5EA;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuController">
   <children>
      <VBox alignment="CENTER" prefHeight="540.0" prefWidth="580.0">
         <children>
            <Label text="WORD SCRAMBLER" textFill="#2c363f">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="55.0" />
               </VBox.margin>
            </Label>
            <Label text="Enter your Name:" textFill="#2c363f">
               <font>
                  <Font size="22.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="9.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="loginField" prefHeight="45.0" style="-fx-background-color: #F2F5EA; -fx-border-color: #2C363F; -fx-border-width: 2; -fx-border-radius: 5;">
               <VBox.margin>
                  <Insets bottom="20.0" left="115.0" right="115.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </TextField>
            <Button fx:id="loginButton" onMouseClicked="#loginPressed" maxWidth="350.0" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: #E75A7C; -fx-background-radius: 5;" text="PLAY!" textFill="WHITE">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
